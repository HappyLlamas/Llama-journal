@model llama_journal.Models.SignupViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "_Layout";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet"/>
</head>

<div class="registration-cssave" style="justify-content: center; display: flex; padding-top: 20px;">
    <form method="post" asp-controller="Login" asp-action="ForgotPassword" style="width: 300px">
        <h3 class="text-center" style="padding: 20px">@ViewBag.Title</h3>
        <div class="form-group">
            <input class="form-control item" type="email" name="Email" id="email" placeholder="Введіть електрону пошту" required>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block create-account" type="submit">Відправте на пошту новий пароль, надоїло чекати</button>
        </div>
    </form>
</div>
