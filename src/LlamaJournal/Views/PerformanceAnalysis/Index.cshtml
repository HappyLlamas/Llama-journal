@page
@model IList<DataLayer.Models.User>

@{
    ViewBag.Title = "PerformanceAnalysis";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>People List</title>
    <style>
        .table-container {
            height: 50vh;
            overflow-y: auto; 
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th {
            background-color: #f2f2f2;
            padding: 8px;
            font-weight: bold;
            text-align: left;
        }
        td {
            padding: 8px;
        }
    </style>
</head>
<body>
<h6 style="text-align: center; padding: 10px">@Model[0].Group</h6>
<div class="table-container">
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Marks</th>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.FullName</td>
                <td>@person.Group</td>
            </tr>
        }
        
    </table>
</div>
<br/>
</body>
</html>