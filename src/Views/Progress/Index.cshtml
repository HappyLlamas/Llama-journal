@model List<llama_journal.Controllers.Card>
@{
    const int columnSize = 2;
    const int rowsSize = 2;
    const int pageSize = rowsSize * columnSize;
    ViewBag.Title = "Progress";
    Layout = "_Layout";
}

<div class="cards_info" style="display: flex; justify-content: center; align-items: center; margin-top: 10px;">
    @for (int i = 0; i < columnSize; i++)
    {
        <div class="row_cards_info" style="padding:20px; margin-bottom: 30px;">
            @foreach (var card in Model)
            {
                <div class="card flex-grow-1" style="display: flex; margin: 30px;">
                    <div class="card-header" style="width: 220px">
                        <h5 class="card-title">@card.Subject</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@card.FullName</p>
                        <p class="card-text">@card.GradesUrl</p>
                    </div>
                </div>
            }
        </div>
    }
</div>


<nav class="nav-pagination" style="display: flex; justify-content: center; padding-top: 20px;">
    <ul class="pagination">
        @for (int i = 1; i <= Math.Ceiling((double) Model.Count() / pageSize); i++)
        {
            <li class="page-item @(i == ViewBag.PageIndex ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new {pageIndex = i})">@i</a>
            </li>
        }
    </ul>
</nav>



